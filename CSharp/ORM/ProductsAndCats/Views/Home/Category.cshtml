@model AllContent

<div class="bg-light pb-4">
    <div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
        <h3 class="display-4"><a href="/products">Products</a></h3>
        <h3 class="display-4">Categories</h3>
    </div>
    <div class="d-inline-block container col-7 m-2 bg-secondary">
        <h3>New Category</h3>
        <div class="mt-4">
            <form asp-action="newCategory" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="thisCategory.Name" class="font-weight-bold mb-0"></label>
                    <span asp-validation-for="thisCategory.Name" class="form-text text-danger"></span>
                    <input asp-for="thisCategory.Name" class="form-control bg-light">
                </div>
                <button type="submit" class="btn btn-primary mb-3 mt-3">Create</button>
            </form>
        </div>
    </div>
    <div class="d-inline-block container col-4 align-top m-2 ml-5 border-left bg-light">
        <h3>Existing Categories</h3>
        <ul s>
        @{
            foreach(Category category in Model.AllCategory)
            {              
                <li>
                    <a href="/categories/@category.CategoryId">@category.Name</a>
                </li>
            }
        }
        </ul>
    </div>
</div>