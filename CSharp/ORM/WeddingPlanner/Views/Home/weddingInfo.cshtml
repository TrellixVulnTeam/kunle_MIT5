@model Wedding

<div class="bg-secondary pb-4 d-inline-block col-12">
    <div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
        <h3 class="display-4">@Model.Husband and @Model.Wife's Wedding</h3>
        <a href="/Dashboard">Dashboard</a>
        <a href="/logout">Log Out</a>
    </div>
    <div class="container col-12 bg-light p-5">
        <h4>Date: @Model.Date.ToString("MMMM dd, yyyy")</h4>
        <h4 class="mt-3">Guests: 
            <ul>
                @{
                    foreach(var guest in Model.Guests)
                    {
                        <li class="font-weight-normal font-italic">@guest.User.FirstName @guest.User.LastName</li>
                    }
                }
            </ul>          
        </h4>
    </div>