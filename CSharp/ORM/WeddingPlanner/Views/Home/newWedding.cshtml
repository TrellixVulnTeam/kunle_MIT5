@model Wedding

<div class="bg-secondary pb-4 d-inline-block col-12">
    <div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
        <h3 class="display-4">Plan Your Wedding</h3>
        <a href="/Dashboard">Dashboard</a>
        <a href="/logout">Log Out</a>
    </div>
  
    <div class="container col-8 bg-light pt-5 mt-4 pb-3 pl-5 rounded">
        <form asp-action="createWedding" asp-controller="Home" method="post">
            <span asp-validation-for="Wife" class="text-danger offset-3"></span>
            <div class="form-group row">
                <label asp-for="Wife"  class="font-weight-bold col-sm-3"></label>
                <input asp-for="Wife" class="col-sm-8 form-control bg-light">
            </div>

            <span asp-validation-for="Husband" class="text-danger offset-3"></span>
            <div class="form-group row">
                <label asp-for="Husband" class="font-weight-bold col-sm-3"></label>
                <input asp-for="Husband"  class="col-sm-8 form-control bg-light">
            </div>
 
            <span asp-validation-for="Date"  class="text-danger offset-3"></span>
            <div class="form-group row">
                <label asp-for="Date" class="font-weight-bold col-sm-3"></label>
                <input asp-for="Date" type="date" class="col-sm-8 form-control bg-light">
            </div>

            <span asp-validation-for="Address" class="text-danger offset-3"></span>
            <div class="form-group row">
                <label asp-for="Address" class="font-weight-bold col-sm-3"></label>
                <input asp-for="Address"  class="col-sm-8 form-control bg-light">
            </div>
            <input asp-for="UserId" type="hidden" value="@ViewBag.User" >

            <button type="submit" class="btn btn-primary mb-3 mt-3 offset-10">Create</button>
        </form>
    </div>
</div>