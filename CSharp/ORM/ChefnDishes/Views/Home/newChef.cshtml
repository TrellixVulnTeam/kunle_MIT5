@model Chef

<div class="bg-secondary pb-4">
    <div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
        <h3 class="display-4">Add a Chef!</h3>   
        <a href="/">Home</a>
    </div>
    <div class="container col-6 bg-light pt-2 mt-4 pb-3">

        <form asp-action="createChef" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="FirstName" class="font-weight-bold mb-0"></label>
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
                <input asp-for="FirstName" class="form-control bg-light">
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="font-weight-bold mb-0"></label>
                <span asp-validation-for="LastName" class="form-text text-danger"></span>
                <input asp-for="LastName" class="form-control bg-light">
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="font-weight-bold mb-0"></label>
                <span asp-validation-for="BirthDate" class="form-text text-danger"></span>
                <input asp-for="BirthDate" type="date" class="form-control bg-light">
            </div>
            <button type="submit" class="btn btn-primary mb-3 mt-3 offset-10">Add Chef</button>
        </form>
    </div>
</div>