@model Crudelicious.Models.Dish

<div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
    <h2>Dish Information</h2>
    <a href="/">Home</a>
</div>
<div class="col-12 bg-light"> 

    <h3 class="display-4 mt-4">@Model.Name</h3>
    <div class="mt-4 ml-5 mb-2 pb-5">
        <p><span class="font-weight-bold mr-5">Dish by:</span>  @Model.Chef</p>
        <p><span class="font-weight-bold mr-3">Description:</span> @Model.Description</p>
        <p><span class="font-weight-bold mr-5">Calories:</span> @Model.Calories</p>
        <p><span class="font-weight-bold mr-5">Tastiness:</span> @Model.Tastiness</p>
        <p><span class="font-weight-bold mr-3">Last Updated:</span> @Model.UpdatedAt.ToString("ddd, MMMM dd, yyyy") at @Model.UpdatedAt.ToString("hh:mm tt") </p>
    </div>
</div>
<div class="d-flex justify-content-around bg-secondary p-2">
    <a href="/dish/@Model.DishId/edit" class="btn btn-success col-3 btn-lg">Edit</a>
    <a href="/dish/@Model.DishId/destroy" class="btn btn-danger col-3 btn-lg">Delete</a>
</div>