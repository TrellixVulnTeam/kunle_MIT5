@model MyModel
<div class="container col-8 bg-secondary text-white">
    <h1 class="display-4 mb-5">Welcome to Quoting Dojo</h1>
    <form action="/quotes" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger ml-5"></span>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Quote"></label>
            <span asp-validation-for="Quote" class="text-danger ml-5"></span>
            <textarea asp-for="Quote" rows="3" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add my quote!</button>
        <a href="/quotes" class="btn btn-primary m-4">Skip to quotes!</a>
    </form>
</div>