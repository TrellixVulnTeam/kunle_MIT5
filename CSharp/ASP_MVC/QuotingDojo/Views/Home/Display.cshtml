@model QuotingDojo.Models.Allquotes
@using System.Collections.Generic

<div class="container col-10 bg-light p-0">
    <h3 class="display-4 text-white bg-secondary mb-5">Here are the awesome quotes!</h3>

    @{
        foreach(var quote in @Model.AllQuotes)
        {
            <div class="container bg-light pb-2 mb-3">
                <h4 class="m-2">"@quote["quote"]"</h4>
                <p class="ml-5 mt-0 mb-4"> @quote["name"] at @quote["created_at"] </p>
            </div>
        }
    }
</div>
<a href="/" class="btn btn-primary offset-9">Add Another Quote</a>