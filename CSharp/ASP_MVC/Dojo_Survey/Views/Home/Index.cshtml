@using Dojo_Survey.Models
@model Survey
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Survey</title>
</head>
<body>
    <div class="container col-6 mt-5 bg-secondary p-3 rounded">
        <form action="/survey" method="post">
            <div class="form-group row">
                <label for="name" class="col-sm-3 col-form-label font-weight-bold">Name</label>
                <div class="col-sm-9">
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <input type="text" class="form-control" asp-for="Name" name="Name">
                </div>
            </div>

            <div class="form-group row">
                <label for="dojo" class="col-sm-3 col-form-label font-weight-bold">Dojo Location</label>
                <div class="col-sm-9">
                    <span class="text-danger" asp-validation-for="Location"></span>
                    <select name="Location" class="custom-select custom-select-lg mb-3">
                        <option value="">Select a Location</option>
                        <option value="San Jose">San Jose</option>
                        <option value="Seattle">Seattle</option>
                        <option value="Dallas">Dallas</option>
                        <option value="Washington DC">Washington DC</option>
                        <option value="Tulsa">Tulsa</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="lang" class="col-sm-3 col-form-label font-weight-bold">Favorite Language</label>     
                <div class="col-sm-9">  
                    <span class="text-danger" asp-validation-for="Language"></span>
                    <select name="Language" class="custom-select custom-select-lg mb-3">
                        <option value="">Select your Favorite Language</option>
                        <option value="Python">Python</option>
                        <option value="C#">C#</option>
                        <option value="Mean">Mean</option>
                        <option value="IOS Swift">IOS Swift</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <span class="text-danger" asp-validation-for="Comment"></span>
                <label for="comm" class="font-weight-bold">Comment (optional):</label>
                <textarea class="form-control" name="Comment" rows="2"></textarea>
            </div>
            <button type="submit" class="btn-lg btn-primary offset-10">Submit</button>
        </form>
    </div>   
</body>
</html>