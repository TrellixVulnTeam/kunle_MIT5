@model MyModel
<div class="container"> 
    <h1>Enter your Information</h1>
    <form asp-action="Create" asp-controllers="Home" method="post">

        <div class="form-group row col-6">
            <label asp-for="F_Name" class="col-sm-2 col-form-label"></label>
            <input asp-for="F_Name" class="col-sm-10">
            <span asp-validation-for="F_Name"></span>
        </div>

        <div class="form-group row col-6">
            <label asp-for="L_Name" class="col-sm-2 col-form-label"></label>
            <input asp-for="L_Name" class="col-sm-10">
            <span asp-validation-for="L_Name"></span>
        </div>

        <div class="form-group row col-6">
            <label asp-for="Age" class="col-sm-2 col-form-label"></label>
            <input asp-for="Age" class="col-sm-10">.
            <span asp-validation-for="Age"></span>
        </div>

        <div class="form-group row col-6">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <input asp-for="Email" class="col-sm-10">
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group row col-6">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <input asp-for="Password" class="col-sm-10">
            <span asp-validation-for="Password"></span>
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
