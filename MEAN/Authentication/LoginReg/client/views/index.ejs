<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body class="bg-secondary">
    <div class="bg-secondary p-4 d-inline-block col-6 mt-2 mr-5">
        <div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
            <h3 class="display-4">Register</h3>
        </div>
        <% if(messages.invalid) { %>
            <% for(var x of messages.invalid) { %>
                <span class="text-danger"><%=  x %></span><br>
            <% } %>
        <% } %>
        
        <div class="container col-12 bg-light pt-2 mt-4 pb-3">
            <form action="/newUser" method="post">
                <div class="form-group">
                    <label for="fname" class="font-weight-bold mb-0">First Name</label>
                    <input type="text" name="first_name" class="form-control bg-light">
                </div>

                <div class="form-group">
                    <label for="lname" class="font-weight-bold mb-0">Last Name</label>
                    <input type="text" name="last_name" class="form-control bg-light">
                </div>

                <div class="form-group">
                    <label for="birthday" class="font-weight-bold mb-0">Birthday</label>
                    <input type="date" name="birthday" class="form-control bg-light">
                </div>

                <div class="form-group">
                    <label for="email" class="font-weight-bold mb-0">Email</label>
                    <input type="text" name="email" class="form-control bg-light">
                </div>

                <div class="form-group">
                    <label for="password" class="font-weight-bold mb-0">Password</label>
                    <input type="password" name="password" class="form-control bg-light">
                </div>

                <!-- <div class="form-group">
                    <label for="pw_onfirm" class="font-weight-bold mb-0">Confirm Password</label>
                    <input type="password" name="pw_confirm" class="form-control bg-light">
                </div> -->
                <button type="submit" class="btn btn-primary mb-3 mt-3 offset-10">Register</button>
            </form>
        </div>
    </div>

    <div class="bg-secondary p-4 d-inline-block col-5 align-top mt-2 ml-4">
        <div class="navbar navbar-expand-lg bg-dark text-white justify-content-between">
            <h3 class="display-4">Login</h3>
        </div>
        <div class="container col-12 bg-light pt-2 mt-4 pb-3">
            <form action="UserLogin" method="post">
                <div class="form-group">
                    <label for="email" class="font-weight-bold mb-0">Email</label>
                    <input type="email" name="email" class="form-control bg-light">
                </div>

                <div class="form-group">
                    <label for="password" class="font-weight-bold mb-0">Password</label>
                    <input type="password" name="password" class="form-control bg-light">
                </div>
                <button type="submit" class="btn btn-primary mb-3 mt-3 offset-10">Sign In</button>
            </form>
        </div>
    </div>
</body>
</html>